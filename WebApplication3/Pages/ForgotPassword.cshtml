@page
@model WebApplication3.Pages.ForgotPasswordModel;
@using WebApplication3.ViewModels;
@{
}

<div class="container mt-5">
	<div class="row justify-content-center align-items-center">
		<div class="col-sm-12 col-md-12 col-lg-4">
			<h1 class="mb-3">Forgot Password</h1>
			<form method="post">
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="mb-3">
					<label asp-for="FPModel.Email">Email (A token will be sent to your inbox)</label>
					<input asp-for="FPModel.Email" class="form-control" />
					<span asp-validation-for="FPModel.Email" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
			</form>
		</div>
	</div>
</div>
