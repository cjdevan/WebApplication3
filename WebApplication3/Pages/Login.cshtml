@page
@model WebApplication3.Pages.LoginModel
@{
}

@using WebApplication3.Model;

<script src="https://www.google.com/recaptcha/api.js"></script>
<script src="https://www.google.com/recaptcha/api.js?render=6Lc5HWQpAAAAAFaMFmvDpCtSuaB-UO99k_YNQYiS"></script>
<script>
	grecaptcha.ready(function () {
		grecaptcha.execute('6Lc5HWQpAAAAAFaMFmvDpCtSuaB-UO99k_YNQYiS', { action: 'Login' }).then(function (token) {
			document.getElementById("g-recaptcha-response").value = token;
		});
	});
</script>

<div class="container mt-5">
	<div class="row justify-content-center align-items-center">
		<div class="col-sm-12 col-md-12 col-lg-4">
			<h1 class="mb-3">Login </h1>

			<form method="post">
				<div class="validation-summary-errors text-danger">
					<ul>
						<li>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</li>
					</ul>
				</div>

				<div class="mb-3">
					<label class="form-label" asp-for="LModel.EmailAddress">Email Address</label>
					<input type="Text" asp-for="LModel.EmailAddress" class="form-control" />
					<span asp-validation-for="LModel.EmailAddress" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label class="form-label" asp-for="LModel.Password">Password</label>
					<input type="Text" asp-for="LModel.Password" class="form-control" />
					<span asp-validation-for="LModel.Password" class="text-danger"></span>
				</div>

				<div class="mb-3 form-check">
					<input type="checkbox" asp-for="LModel.RememberMe" class="form-check-input" />
					<label class="form-check-label" asp-for="LModel.RememberMe">Remember Me?</label>
				</div>

				<input type="hidden" id="g-recaptcha-response" name="g-recaptcha-response" />

				<hr />

				<div class="mb-3">
					<button type="submit" class="btn btn-primary">Login</button>
				</div>
			</form>

			<div class="mb-3">
				<a asp-page="Login" asp-page-handler="ForgotPassword">Forgot Password?</a>
			</div>

		</div>
	</div>
</div>


