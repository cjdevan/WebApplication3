@page
@model WebApplication3.Pages.LogoutModel
@{
}

<div class="container mt-5">
	<div class="col-sm-12 col-md-12 col-lg-4">
		<h1 class="mb-3">Logout </h1>

		<form method="post">
			<div class="container mt-5">
				<div class="row justify-content-center">
					<div>
						<p> Are you sure you want to logout? </p>
						<p>
							<button class="btn btn-primary" asp-page-handler="Logout">Yes</button>
							<button class="btn btn-light ml-5 border-dark" asp-page-handler="DontLogout">No</button>
						</p>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>